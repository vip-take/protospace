= devise_error_messages!
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "container user-new"}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :name, placeholder: "Username", class: "user-name"
          .user-image.col-md-2
            %button.btn.btn-primary Add image
        = f.email_field :email, placeholder: "E-Mail(必須)", class: "user-email"
        = f.password_field :password, placeholder: "Password(必須)", autocomplete: "off",class: "user-password"
        = f.password_field :password_confirmation, placeholder: "Password", autocomplete: "off", class: "user-password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :group, placeholder: "Member"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_field :profile, placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_field :works, placeholder: "Works"
    .row.text-center.user-btn
      = f.submit "save", class: "btn btn-lg btn-primary btn-block"

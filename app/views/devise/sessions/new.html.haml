.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f|
    %h2.form-signin-heading Please sign in
    = f.label :email, class: "sr-only"
    = f.text_field :email, id: "email", placeholder: "E-Mail Address", autofocus: "true", class: "form-control"
    = f.label :password, class: "sr-only"
    = f.text_field :password, id: "email", placeholder: "Password", class: "form-control"
    .checkbox
      %label
        = f.check_box 'remember_me', {}, 1, 0
        Remember me
    = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      = link_to 'Sign up now', "#{new_user_registration_path}"

.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")
.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{role: "presentation"}
          = link_to "Popular Proto", prototypes_populars_path
        %li{role: "presentation"}
          = link_to "Newest Proto", prototypes_newests_path
      = link_to "View Tags",prototypes_tags_path, class: "btn btn-default col-lg-1"
.container
  .row
    - @tags.each do |tag|
      .col-sm-4.col-sm-3
        = link_to(prototypes_tag_path(tag.name), class: "tag thumbnail") do
          .tag-name
            = tag.name
          .tag-project
            = "#{tag.taggings_count} project"
.text-center
  = paginate @tags
